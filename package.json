{
  "name": "pg-core",
  "version": "1.0.0",
  "description": "A single-node relational database prototype demonstrating transaction processing, MVCC visibility rules, and WAL-based crash recovery.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:info": "LOG_LEVEL=info node dist/index.js",
    "start:debug": "LOG_LEVEL=debug node dist/index.js",
    "start:trace": "LOG_LEVEL=trace node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:info": "LOG_LEVEL=info ts-node src/index.ts",
    "dev:debug": "LOG_LEVEL=debug ts-node src/index.ts",
    "dev:trace": "LOG_LEVEL=trace ts-node src/index.ts",
    "dev:quiet": "LOG_LEVEL=warn ts-node src/index.ts",
    "test": "LOG_LEVEL=warn jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "LOG_TESTS=true LOG_LEVEL_TEST=debug jest",
    "test:trace": "LOG_TESTS=true LOG_LEVEL_TEST=trace jest",
    "test:verbose": "jest --verbose",
    "test:quiet": "LOG_TESTS=false jest",
    "clean": "rm -rf dist coverage",
    "clean:all": "rm -rf dist coverage node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "pino": "^10.2.0",
    "pino-pretty": "^11.3.0",
    "prom-client": "^15.1.3"
  }
}
